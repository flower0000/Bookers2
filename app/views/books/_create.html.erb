<div class="col-md-3">
   <h2>User info</h2>

   <!--プロフィール入力欄始め-->
   <div>
    <%= attachment_image_tag user, :profile_image, :fill,100, 100, format: 'jpeg', fallback: "no_image.jpg", size:'40x40' %>
    <!--写真の導入はattachment_image_tag @user, :profile_image,で実行.profile_image_idの_idはrefileの仕様で省略-->
    <!--なにもなければfallback: "no_image.jpg"でimageフォルダにある画像に差し替え-->
    <table>
     <tbody>
      <tr>
       <th>name</th>
       <th><%= user.name %></th><!--インスタンス変数扱いされない-->
      </tr>
      <tr>
       <th>introduction</th>
       <th><%= user.introduction %></th>
      </tr>
     </tbody>
    </table>

    <!--ここでボタン入力欄作る-->
    <%= link_to "",edit_user_path(user.id), class:"btn btn-outline-secondary btn-block fas fa-user-cog" %>
<!--fas fa-user-cogでFont Awesomeを利用した画像を挿入-->
   </div>
   <!--プロフィール入力欄終わり-->

   <div>
    <h2 class="mt-3">New book</h2>
    <!-- form_with部分(投稿部分) -->
     <%= form_with model: book, local:true do |f| %>
    <h4>Title</h4>
     <%= f.text_field :title %>

    <h4>Opinion</h4>
     <%= f.text_area :body %>

    <br><%= f.submit 'Create Book', class: "btn btn-success" %></br>
   <% end %>
   </div>
  </div>