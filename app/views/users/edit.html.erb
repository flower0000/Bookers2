<!--Userの編集用ページ-->
<div class="container">
  <div class="row">
    <div class="mx-auto">
      <h1>User info</h1>
      
      <!--Editで投稿の更新失敗時のエラー出力箇所-->
      <div>
        <% if @user.errors.any? %><!--エラーの有無を確認．あれば実行-->
          <div><%= flash[:alert] %></div>
          <div>
            <% @user.errors.full_messages.each do |message| %>
              <%= message %>
            <% end %>
          </div>
        <% end %>
      </div>
      <!--エラー出力ここまで-->
      
      <%= form_with model: @user, local:true do |f| %>
      <div>Name</div>
      <div class="form-group"><%= f.text_field :name, class:"form-control" %></div>
      
      <div>Image</div>
      <div><%= f.attachment_field :profile_image %></div>
      
      <div>Introduction</div>
      <div class="form-group"><%= f.text_area :introduction, class:"form-control" %></div>
      
      <br><%= f.submit 'Update User', class:"btn btn-secondary" %></br>
      <% end %>
    </div>
  </div>
</div>